package com.epam.CleanCode;

public class Calculation {
	
	float simpleInterest(int principle, float rate, int days) {
		return (principle * rate * days);
	}
	
	float compoundInterest(int principle, float rate, int days) {
		float sample = (1 + (rate / 100));
		float ans = principle * (float)Math.pow(sample, days);
		return ans;
	}
	
	
}
