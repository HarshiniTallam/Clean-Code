package com.epam.CleanCode;

public class Calculation {
	
	int simpleInterest(int principle, int interest, int days) {
		return (principle * interest * days);
	}
	
	float compoundInterest(int principle, int interest, int days) {
		float ans = principle * (1 + (interest / days));
		return ans;
	}
	
	
}
